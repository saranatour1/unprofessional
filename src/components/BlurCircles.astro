---
type Props = {
  position?: "bottom" | "top";
  color?: string;
};

const { position, color } = Astro.props;
---

<div
  class:list={{
    ["left-0 top-0"]: position === "top",
    ["right-0 bottom-0"]: position === "bottom",
    [color ?? "bg-orange-500"]: true,
    ['fixed -z-10 h-[134px] w-[134px] lg:w-[300px] lg:h-[300px] rounded-full blur-[150px] md:blur-[350px] opacity-50']:true,
  }}
>
</div>
